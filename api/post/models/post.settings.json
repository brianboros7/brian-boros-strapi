{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "author": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "title": {
      "type": "richtext",
      "required": true
    },
    "date": {
      "required": true,
      "type": "datetime"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    }
  }
}
